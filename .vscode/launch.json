{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI (Poetry)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
